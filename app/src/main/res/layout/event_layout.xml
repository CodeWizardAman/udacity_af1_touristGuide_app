<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/rest_padding">

    <ImageView
        android:id="@+id/event_image_id"
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_height"
        android:layout_marginLeft="@dimen/hist_margin"
        android:layout_toRightOf="@id/event_image_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_name_id"
            style="@style/titleText" />

        <TextView
            android:id="@+id/event_desc_id"
            style="@style/eventTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/histWidthStyle"
        android:layout_below="@id/event_image_id"
        android:layout_marginTop="@dimen/hist_margin"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_date__id"
            style="@style/eventTextStyle" />

        <TextView
            android:id="@+id/event_add_id"
            style="@style/eventTextStyle" />

        <TextView
            android:id="@+id/event_contact__id"
            style="@style/eventTextStyle" />

    </LinearLayout>
</RelativeLayout>
